<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


	<!-- Create real_estate table -->
    <changeSet author="darko" id="2" dbms="postgresql">
        <createTable tableName="real_estates">
            <column name="property_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="varchar(255)"/>
            <column name="city" type="varchar(255)"/>
            <column name="created_at" type="date"/>
            <column name="description" type="varchar(1000)"/>
            <column name="price" type="numeric(38,2)"/>
            <column name="property_type" type="varchar(255)"/>
            <column name="size_in_sqmt" type="varchar(255)"/>
            <column name="state" type="varchar(255)"/>
            <column name="title" type="varchar(255)"/>
            <column name="updated_at" type="date"/>
            <column name="zip_code" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Create real-estate-features table (ElementCollection) -->
    <changeSet author="darko" id="1" dbms="postgresql">
        <createTable tableName="real-estate-features">
            <column name="property_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="features" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Add foreign key for real-estate-features -->
    <changeSet author="darko" id="6" dbms="postgresql">
        <addForeignKeyConstraint
            baseTableName="real-estate-features"
            baseColumnNames="property_id"
            referencedTableName="real_estates"
            referencedColumnNames="property_id"
            constraintName="fk_real_estate_property_id"
            deferrable="false"
            initiallyDeferred="false"/>
    </changeSet>
    

	<!-- Create roles table -->
	<changeSet author="darko" id="3" dbms="postgresql">
	    <createTable tableName="roles">
	        <column name="id" type="bigint">
	            <constraints primaryKey="true" nullable="false"/>
	        </column>
	        <column name="name" type="varchar(255)"/>
	    </createTable>
	</changeSet>
	
	<!-- Create users table -->
	<changeSet author="darko" id="5" dbms="postgresql">
	    <createTable tableName="users">
	        <column name="id" type="bigint">
	            <constraints primaryKey="true" nullable="false"/>
	        </column>
	        <column name="created_at" type="date"/>
	        <column name="password" type="varchar(255)"/>
	        <column name="updated_at" type="date"/>
	        <column name="username" type="varchar(255)"/>
	    </createTable>
	</changeSet>
	
	<!-- Create user_roles table (Join Table for Many-to-Many) -->
	<changeSet author="darko" id="4" dbms="postgresql">
	    <createTable tableName="user_roles">
	        <column name="user_id" type="bigint">
	            <constraints nullable="false"/>
	        </column>
	        <column name="role_id" type="bigint">
	            <constraints nullable="false"/>
	        </column>
	    </createTable>
	</changeSet>
	
	<!-- Add foreign key for user_roles.user_id -->
	<changeSet author="darko" id="7" dbms="postgresql">
	    <addForeignKeyConstraint
	        baseTableName="user_roles"
	        baseColumnNames="user_id"
	        referencedTableName="users"
	        referencedColumnNames="id"
	        constraintName="fk_user_roles_user_id"
	        deferrable="false"
	        initiallyDeferred="false"/>
	</changeSet>
	
	<!-- Add foreign key for user_roles.role_id -->
	<changeSet author="darko" id="8" dbms="postgresql">
	    <addForeignKeyConstraint
	        baseTableName="user_roles"
	        baseColumnNames="role_id"
	        referencedTableName="roles"
	        referencedColumnNames="id"
	        constraintName="fk_user_roles_role_id"
	        deferrable="false"
	        initiallyDeferred="false"/>
	</changeSet>


</databaseChangeLog>
