<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
        
    <changeSet id="0000-validate" author="darko">
        <validCheckSum>ANY</validCheckSum>
        <sql>SELECT 1</sql>
    </changeSet>

    <changeSet id="0001" author="darko" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="roles"/></not>
        </preConditions>
        <createTable tableName="roles">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="0002" author="darko" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="users"/></not>
        </preConditions>
        <createTable tableName="users">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="created_at" type="date"/>
            <column name="updated_at" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="0003" author="darko" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="real_estates"/></not>
        </preConditions>
        <createTable tableName="real_estates">
            <column name="property_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="varchar(255)"/>
            <column name="city" type="varchar(255)"/>
            <column name="created_at" type="date"/>
            <column name="description" type="varchar(1000)"/>
            <column name="price" type="numeric(38,2)"/>
            <column name="property_type" type="varchar(255)"/>
            <column name="size_in_sqmt" type="varchar(255)"/>
            <column name="state" type="varchar(255)"/>
            <column name="title" type="varchar(255)"/>
            <column name="updated_at" type="date"/>
            <column name="zip_code" type="varchar(255)"/>
            <column name="listing_type" type="varchar(20)"/>
            <column name="user_id" type="bigint"/>
        </createTable>
    </changeSet>

     <changeSet id="0004" author="darko" dbms="postgresql" runOnChange="true">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="real_estate_features"/></not>
        </preConditions>
        <createTable tableName="real_estate_features">
            <column name="property_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="feature" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0005" author="darko" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="real_estate_images"/></not>
        </preConditions>
        <createTable tableName="real_estate_images">
            <column name="property_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0006" author="darko" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="user_roles"/></not>
        </preConditions>
        <createTable tableName="user_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="0004-add-user-id-column" author="darko" dbms="postgresql">
    <preConditions onFail="MARK_RAN">
        <and>
            <tableExists tableName="real_estates"/>
            <not><columnExists tableName="real_estates" columnName="user_id"/></not>
        </and>
    </preConditions>
    <addColumn tableName="real_estates">
        <column name="user_id" type="bigint">
            <constraints nullable="false"/>
        </column>
    </addColumn>
    <!-- Set default value for existing records if needed -->
    <sql>UPDATE real_estates SET user_id = (SELECT id FROM users LIMIT 1) WHERE user_id IS NULL</sql>
	</changeSet>

	<changeSet id="0005-add-user-fk" author="darko" dbms="postgresql">
    <preConditions onFail="MARK_RAN">
        <and>
            <tableExists tableName="real_estates"/>
            <tableExists tableName="users"/>
            <columnExists tableName="real_estates" columnName="user_id"/>
            <columnExists tableName="users" columnName="id"/>
            <not><foreignKeyConstraintExists foreignKeyName="fk_real_estates_user"/></not>
        </and>
    </preConditions>
    <addForeignKeyConstraint 
        baseTableName="real_estates"
        baseColumnNames="user_id"
        constraintName="fk_real_estates_user"
        referencedTableName="users"
        referencedColumnNames="id"
        onDelete="CASCADE"/>
	</changeSet>
	
</databaseChangeLog>