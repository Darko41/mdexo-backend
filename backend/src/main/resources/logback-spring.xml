<?xml version="1.0" encoding="UTF-8"?>

<configuration>

<!-- Console appender for logging to console -->
<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	<encoder>
		<pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
	</encoder>
</appender>

<!-- Root logger -->
<root level="INFO">
	<appender-ref ref="STDOUT" />
</root>

